pipeline {
  agent any
  environment {
    GIT = '"C:\\Program Files\\Git\\bin\\git.exe"'
    UNITY = '"C:\\Program Files\\Unity\\Editor\\Unity.exe"'
    PROJECT = 'OOOneUnityTools_Switch'
    PROJECTPATH = '"/Users/builder/AppData/Local/Jenkins/.jenkins/workspace/OOOneUnityTools_Switch"
    PLATFORM = 'Switch'
    OUTPUT = 'Build/OOneUnityTools.exe'
  }
  stages {
    stage('Clean Workspace') {
      steps {
        bat "$GIT reset --hard"
        bat "$GIT clean -x -f -d -e $PROJECTPATH/Library"
      }
    }
    stage('Update Workspace') {
      steps {
        bat "$GIT checkout"
        bat "$GIT lfs checkout"
      }
    }
    stage('Import Assets') {
      steps {
        bat "$UNITY -batchmode -logFile - -projectPath=$PROJECTPATH -executeMethod OOOneBuild.AutoBuildScript.BuildGame -quit -accept-apiupdate"
      }
    }
    stage('Run Unit Tests') {
      steps {
        bat "$UNITY -batchmode -logFile - -projectPath=$PROJECTPATH -executeMethod OOOneBuild.AutoBuildScript.BuildGame -runEditorTests"
      }
    }
    stage('Build') {
      steps {
        bat "$UNITY -batchmode -logFile - -projectPath=$PROJECTPATH -executeMethod OOOneBuild.AutoBuildScript.BuildGame -quit "
      }
    }
  }
}
